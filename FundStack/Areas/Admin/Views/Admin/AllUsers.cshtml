@using FundStack.Services.Admin
@model List<AllUsersServiceModel>

<style>
    table {
  border-collapse: separate;
  border-spacing: 0 10px;
}
td:first-child,
th:first-child {
  border-radius: 7px 0 0 7px;
}

td:last-child,
th:last-child {
  border-radius: 0 7px 7px 0;
}

tr{
  line-height: 45px;
  
}

td{
 max-width:400px;
 overflow: auto;
 white-space: nowrap;
 text-align: center;
}

th{
     text-align: center;
}

</style>

<div calss="row">
    <div class="card">
        <div class="card-body">
                <table class="table table-striped table-hover table-responsive-lg mt-5 mb-5">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">User Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                @{
                    int rowId = 0;
                }
                @foreach (var user in Model)
                {
                    rowId++;
                    <tbody>
                        <tr>
                            <th scope="row">@rowId</th>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                <a class="btn btn-primary" asp-controller="Admin" asp-action="ManageRoles" asp-route-userId="@user.UserId">Manage Roles</a>
                            </td>
                        </tr>
                    </tbody>
                }   
            </table>
        </div>
    </div>
</div>


