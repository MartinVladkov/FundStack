@using FundStack.Services.Admin
@model List<AllUsersServiceModel>

<style>
    table {
  border-collapse: separate;
  border-spacing: 0 10px;
}
td:first-child,
th:first-child {
  border-radius: 7px 0 0 7px;
}

td:last-child,
th:last-child {
  border-radius: 0 7px 7px 0;
}

tr{
  line-height: 45px;
  
}

td{
 max-width:400px;
 overflow: auto;
 white-space: nowrap;
 text-align: center;
}

th{
     text-align: center;
}

</style>

<div calss="row">
    <div class="card">
        <div class="card-body">
             <form method="post"> 
            <table class="table table-striped table-hover table-responsive-lg mt-5 mb-5">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">User Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Role</th>
                    </tr>
                </thead>
                @{
                    int rowId = 0;
                }
                @foreach (var user in Model)
                {
                    rowId++;
                    
                    <tbody>
                        <tr>
                            <th scope="row">@rowId</th>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.IsPremiumUser)
                                {
                                    <div class="form-check">
                                        <input asp-for="@user.IsPremiumUser" class="form-check-input" value="true" checked>
                                        <label asp-for="@user.IsPremiumUser">Premium User</label>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-check">
                                        <input asp-for="@user.IsPremiumUser" class="form-check-input" value="true">
                                        <label asp-for="@user.IsPremiumUser">Premium User</label>
                                    </div>
                                }
                            </td>
                        </tr>
                   
                    </tbody>
                }   
            </table>
            <input class="btn btn-primary mt-3" type="submit" value="Save Roles"/>
            </form>
        </div>

    </div>
    
</div>
